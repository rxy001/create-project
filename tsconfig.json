{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src", "rollup.config.ts"]
}
